#listener = sr.Recognizer()
engine = pyttsx3.init()
voices = engine.getProperty("voices")
engine.setProperty('voice',voices[1].id) # Set femal voice

def engine_talk(text):
    engine.say(text)
    engine.runAndWait()

def InsertText(text):
    output.delete('1.0',END)
    output.insert(tk.INSERT,text)

